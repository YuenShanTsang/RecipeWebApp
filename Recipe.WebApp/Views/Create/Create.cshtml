@model RecipeItem

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<p>Create your own recipe!</p>

<form asp-controller="Home" asp-action="CreateRecipe" method="post">
    <div class="form-group">
        <label for="RecipeName">Recipe Name</label>
        <input type="text" id="RecipeName" name="RecipeName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="RecipeCategory">Recipe Category</label>
        <input type="text" id="RecipeCategory" name="RecipeCategory" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="RecipeIngredient">Recipe Ingredient</label>
        <input type="text" id="RecipeIngredient" name="RecipeIngredient" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="RecipeInstruction">Recipe Instruction</label>
        <textarea id="RecipeInstruction" name="RecipeInstruction" class="form-control" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="RecipeCookingTime">Recipe Cooking Time</label>
        <input type="text" id="RecipeCookingTime" name="RecipeCookingTime" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="RecipeDifficulty">Recipe Difficulty</label>
        <input type="text" id="RecipeDifficulty" name="RecipeDifficulty" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="RecipeImage">Recipe Image URL</label>
        <input type="text" id="RecipeImage" name="RecipeImage" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Recipe</button>
</form>

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>
