@model RecipeItem

@{
    ViewData["Title"] = "Edit Recipe";
}

<h1>@ViewData["Title"]</h1>

<p>Edit recipe</p>

<form asp-controller="Details" asp-action="Edit" method="post">
    <input type="hidden" asp-for="RecipeId" />
    <div class="form-group">
        <label for="RecipeName">Recipe Name</label>
        <input type="text" class="form-control" id="RecipeName" name="RecipeName" value="@Model.RecipeName" required>
    </div>

    <div class="form-group">
        <label for="RecipeCategory">Recipe Category</label>
        <input type="text" id="RecipeCategory" name="RecipeCategory" class="form-control" value="@Model.RecipeCategory" required>
    </div>

    <div class="form-group">
        <label for="RecipeIngredient">Recipe Ingredient</label>
        <input type="text" id="RecipeIngredient" name="RecipeIngredient" class="form-control" value="@Model.RecipeIngredient" required>
    </div>

    <div class="form-group">
        <label for="RecipeInstruction">Recipe Instruction</label>
        <textarea id="RecipeInstruction" name="RecipeInstruction" class="form-control" rows="4" required>@Model.RecipeInstruction</textarea>
    </div>

    <div class="form-group">
        <label for="RecipeCookingTime">Recipe Cooking Time</label>
        <input type="text" id="RecipeCookingTime" name="RecipeCookingTime" class="form-control" value="@Model.RecipeCookingTime" required>
    </div>

    <div class="form-group">
        <label for="RecipeDifficulty">Recipe Difficulty</label>
        <input type="text" id="RecipeDifficulty" name="RecipeDifficulty" class="form-control" value="@Model.RecipeDifficulty" required>
    </div>

    <div class="form-group">
        <label for="RecipeImage">Recipe Image URL</label>
        <input type="text" id="RecipeImage" name="RecipeImage" class="form-control" value="@Model.RecipeImage" required>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>
