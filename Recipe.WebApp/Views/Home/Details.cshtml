@model RecipeItem

@{
    ViewData["Title"] = "Recipe Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Edit" asp-controller="Details" asp-route-id="@Model.RecipeId" class="btn btn-primary">Edit Recipe</a>
    <form asp-action="Delete" asp-controller="Details" asp-route-id="@Model.RecipeId" onsubmit="return confirm('Are you sure you want to delete this recipe?');" class="ml-auto">
        <button type="submit" class="btn btn-danger">Delete Recipe</button>
    </form>
</div>

<div class="recipe-detail">
    <h1>@Model.RecipeName</h1>
    <p>Category: @Model.RecipeCategory</p>
    <img src="@Model.RecipeImage" alt="Recipe Image" style="max-width: 100%; height: auto;">
    <p>Cooking Time: @Model.RecipeCookingTime</p>
    <p>Difficulty: @Model.RecipeDifficulty</p>
    <h5>Ingredients</h5>
    <p>@Model.RecipeIngredient</p>
    <h5>Instructions</h5>
    <p>@Model.RecipeInstruction</p>
</div>
